
{% set value_button = '' %}
{% set disable = '' %}

{% if (value_button_edite is defined) and (value_button_edite is not null) %}
	{% set value_button = "Modifier la recette" %}
{% else %}
	{% set value_button = "Ajouter une recette" %}
{% endif %}

{{ form_start(form) }}

	<div class="form-group">
		{{ form_label(form.nom) }}
		{{ form_widget(form.nom) }}
		<div class="form-error">
			{{ form_errors(form.nom) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.description) }}
		{{ form_widget(form.description) }}
		<div class="form-error">
			{{ form_errors(form.description) }}
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-md-4">
				{{ form_label(form.time) }}
				{{ form_widget(form.time) }}
				<div class="form-error">
					{{ form_errors(form.time) }}
				</div>
			</div>
			<div class="col-md-4">
				{{ form_label(form.difficulte) }}
				{{ form_widget(form.difficulte) }}
				<div class="form-error">
					{{ form_errors(form.difficulte) }}
				</div>
			</div>
			<div class="col-md-4">
				{{ form_label(form.nbPersonne) }}
				{{ form_widget(form.nbPersonne) }}
				<div class="form-error">
					{{ form_errors(form.nbPersonne) }}
				</div>
			</div>
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.ingredients) }}
		{{ form_widget(form.ingredients) }}
		<div class="form-error">
			{{ form_errors(form.ingredients) }}
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-md-6">
				{{ form_label(form.isFavori) }}
				{{ form_widget(form.isFavori) }}
				<div class="form-error">
					{{ form_errors(form.isFavori) }}
				</div>
			</div>
			<div class="col-md-6">
				{{ form_label(form.prix) }}
				{{ form_widget(form.prix) }}
				<div class="form-error">
					{{ form_errors(form.prix) }}
				</div>
			</div>
		</div>
	</div>

	{{ form_rest(form) }}

	<div class="d-flex justify-content-end">
		<button class="btn btn-primary btn-lg mt-4" type="submit"> {{ value_button }} </button>
	</div>


{{ form_end(form) }}

