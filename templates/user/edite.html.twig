{% extends "base.html.twig" %}

{% block title %} Profil de: {{ user.nom }} {% endblock %} 

{% block body %}

	<h1 class='mt-4'> Formulaire de modification des informations de : {{ user.nom|upper  }}  {{ user.prenom }}  </h1>

	{{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-error">
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom) }}
            <div class="form-error">
                {{ form_errors(form.prenom) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo) }}
            <div class="form-error">
                {{ form_errors(form.pseudo) }}
            </div>
        </div>

	{{ form_rest(form) }}

        <div class="d-flex justify-content-end">
            <button class="btn btn-primary btn-lg mt-4" type="submit"> Modifier </button>
        </div>

    {{ form_end(form) }}

{% endblock %}